@model Art.Models.IndexViewModel

<div class="side">
    <h2 class="sidebar-heading">E-Bülten</h2>
    <p>Bizimle ilgili tüm etkinlik ve yeniliklerden haberdar olmak için lütfen e-bültenimiz kaydolun.</p>
    <form action="/subscribe" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input asp-for="Email" type="email" name="Email" class="form-control form-email"
                placeholder="E-mail adresiniz *">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Name" type="text" name="Name" class="form-control form-email" placeholder="Adınız *">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-subscribe">Kaydol</button>
        </div>
    </form>

    @if (TempData["SuccessSubscribe"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessSubscribe"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>